<?php

namespace App\Http\Controllers\Guru;

use App\Http\Controllers\Controller;
use Illuminate\Support\Facades\Auth;

class DashboardController extends Controller
{
    public function index()
    {
        $user = Auth::guard('web')->user();

        if (!$user) abort(403, 'Unauthorized');

        return view('guru.dashboard', compact('user'));
    }

    public function pengawasDashboard()
    {
        $user = Auth::guard('web')->user();

        if (!$user || $user->role !== 'pengawas') {
            abort(403, 'Unauthorized');
        }

        return view('guru.pengawas.dashboard', compact('user'));
    }
    public function ruanganDashboard()
    {
        $user = Auth::guard('web')->user();

        if (!$user || $user->role !== 'ruangan') {
            abort(403, 'Unauthorized');
        }

        return view('guru.ruangan-dashboard', compact('user'));
    }
    public function koordinatorDashboard()
    {
        $user = Auth::guard('web')->user();

        if (!$user || $user->role !== 'koordinator') {
            abort(403, 'Unauthorized');
        }

        return view('guru.koordinator-dashboard', compact('user'));
    }
    public function naskahDashboard()
    {
        $user = Auth::guard('web')->user();

        if (!$user || $user->role !== 'naskah') {
            abort(403, 'Unauthorized');
        }

        return view('guru.naskah-dashboard', compact('user'));
    }
    public function dataDashboard()
    {
        $user = Auth::guard('web')->user();

        if (!$user || $user->role !== 'data') {
            abort(403, 'Unauthorized');
        }

        return view('guru.data-dashboard', compact('user'));
    }
}
